            <img src="../images/guns/rifle.png" height="100%" alt="rifle" border=0 style="border:0; text-decoration:none; outline:none;"/>
        </a>
      </div>
      <div class="weaponbox" id="weapon2"></div>
    </div>

    <div>
      <h1 id="scoreDisplay">Score: 0</h1>
      <h1 id="heartDisplay">3 hearts</h1>
      <h1 id="keyDisplay">0 keys</h1>
    </div>
    <form action="/">
      <button type="submit" id="bbtn"><img id="bbtn" src="../images/backbutton.png"></button>
    </form>
    <form id="dead" action="/death">
   </form>
