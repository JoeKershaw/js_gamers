  <head>
    <link rel="stylesheet" href="/stylesheets/start.css">
    <meta charset="utf-8">
    <link rel="shortcut icon" href="#">
    <title>GET READY</title>
  </head>
  <body>
    {{title}}
    <audio id="death">
      <source src="https://opengameart.org/sites/default/files/1_8.mp3" type="audio/mp3">
    </audio>
    <audio id="game_over">
      <source src="../audio/gameover.wav" type="audio/wav">
    </audio>
    <div id="gameover_screen">
      <!-- <h1> MOVING GAME </h1> -->
      <img id="gameover" src="../images/game-over.png">

    </div>

    <div>
      <form action="/database-send" style="width: 210px; margin: 0 auto">
        <input type="text" name="name" maxlength="4" required>
        <input id="leaderboard_score" type="hidden" name="points" value="0">
        <button type="submit">Enter</button>
      </form>
    </div>

    <div>
      <form class="game_over" action="/">
        <button id ="sbtnover" type="submit"><img src="../images/startbutton.png"></button>
      </form>
    </div>

    <div id="scoreDisplay" style="text-align: center; font-size: 50px; padding: 50px"></div>

  </body>


<script type="text/javascript" src="src/player_movement.js"></script>
  <script type="text/javascript">
    playAudio("death");
    playAudio("game_over");
    document.getElementById("scoreDisplay").innerHTML = "Score: " + String(sessionStorage.getItem("Score"));
    document.getElementById("leaderboard_score").value = String(sessionStorage.getItem("Score"));
  </script>
